
<view>
  <Search></Search>
  <Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
    <block wx:if="{{tabs[0].isActive}}">
      <view class="first-tab">
        <navigator 
          class="goods-item"
          wx:for="{{goodsList}}"
          wx:key="goods_id"
          url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}"
        >
          <view class="goods-img-wrap">
            <image 
              mode="widthFix" 
              src="{{item.goods_small_logo ? item.goods_small_logo : 'https://img.alicdn.com/imgextra/i4/1714128138/O1CN01uJIO9R29zFrZsNmvV_!!0-item_pic.jpg_430x430q90.jpg'}}">
            </image>
          </view>
          <view class="goods-info-wrap">
            <view class="goods-name">{{item.goods_name}}</view>
            <view class="goods-price">ï¿¥{{item.goods_price}}</view>
          </view>
        </navigator>
      </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">1</block>
    <block wx:elif="{{tabs[2].isActive}}">2</block>
  </Tabs>
</view>
