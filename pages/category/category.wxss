page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates-container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates-container .left-menu {
  flex: 2;
}
.cates .cates-container .left-menu .menu-item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates-container .left-menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates-container .right-goods {
  flex: 5;
}
.cates .cates-container .right-goods .goods-group .goods-title {
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 15rpx 0;
}
.cates .cates-container .right-goods .goods-group .goods-title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates-container .right-goods .goods-group .goods-list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates-container .right-goods .goods-group .goods-list navigator {
  width: 33.33%;
  text-align: center;
}
.cates .cates-container .right-goods .goods-group .goods-list navigator image {
  width: 50%;
}
